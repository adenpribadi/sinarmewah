<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row pb-2">
    <div class="col-md-4 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="<%= contact.icon_address %>"></i> </span>
        </div>
        <%= form.text_field :icon_address, id: :contact_icon_address, :class=> "form-control" %>
      </div>
    </div>
    <div class="col-md-8 col-sm-12">
      <%= form.text_area :address, id: :contact_address, :class=> "form-control" %>
    </div>
  </div>
  
  <div class="form-row pb-2">
    <div class="col-md-4 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="<%= contact.icon_email %>"></i> </span>
        </div>
        <%= form.text_field :icon_email, id: :contact_icon_email, :class=> "form-control" %>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <%= form.text_field :email, id: :contact_email, :class=> "form-control" %>
    </div>
  </div>


  <div class="form-row pb-2">
    <div class="col-md-4 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="<%= contact.icon_fax %>"></i> </span>
        </div>
        <%= form.text_field :icon_fax, id: :contact_icon_fax, :class=> "form-control" %>
      </div>
    </div>
    <div class="col-md-5 col-sm-12">
      <%= form.text_field :fax, id: :contact_fax, :class=> "form-control" %>
    </div>
  </div>

  <div class="form-row pb-2">
    <div class="col-md-4 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="<%= contact.icon_phone %>"></i> </span>
        </div>
        <%= form.text_field :icon_phone, id: :contact_icon_phone, :class=> "form-control" %>
      </div>
    </div>
    <div class="col-md-5 col-sm-12">
      <%= form.text_field :phone, id: :contact_phone, :class=> "form-control" %>
    </div>
  </div>
  <hr>
  <div class="row pb-2">
    <div class="col-md-6 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fab fa-facebook-f"></i> </span>
        </div>
        <%= form.text_field :facebook, id: :contact_facebook, :class=> "form-control" %>        
      </div>
    </div>
  </div>
  <div class="row pb-2">
    <div class="col-md-6 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fab fa-twitter"></i> </span>
        </div>
        <%= form.text_field :twitter, id: :contact_twitter, :class=> "form-control" %>        
      </div>
    </div>
  </div>
  <div class="row pb-2">
    <div class="col-md-6 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fab fa-google-plus-g"></i> </span>
        </div>
        <%= form.text_field :gplus, id: :contact_gplus, :class=> "form-control" %>        
      </div>
    </div>
  </div>
  <div class="row pb-2">
    <div class="col-md-6 col-sm-12">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"><i class="fab fa-linkedin-in"></i> </span>
        </div>
        <%= form.text_field :linkedin, id: :contact_linkedin, :class=> "form-control" %>        
      </div>
    </div>
  </div>

  <div class="row p-1">
    <div class="col-8"></div>
    <div class="col-4">
      <%= form.submit 'Submit', :class => 'btn btn-primary btn-block', :name => 'submit' %>
    </div>
  </div>
<% end %>
