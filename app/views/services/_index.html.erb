
	<div class="container">
		<div class="row pt-0">
			<div class="col pb-2">
        <H1 class="text-dark">Sole Agent & Service</H1>
			</div>
		</div>
		<div class="row p-1">
      <% @services.each do |service| %>
			  <div class="col-lg-3 col-6 pb-2">
			  	<div class="card w-100 p-0 bg-transparent" style="width: 18rem;">
            <% if service.image? %>
			  			<%= link_to(image_tag(service.image.thumb.url, alt: "Image #{service.name}", :class=> "card-img-top bg-white"), service) if service.image? %>
            <% else %>
              <img class="card-img-top" src="https://source.unsplash.com/user/erondu/300x300" alt="Card image cap">
            <% end %>
					  <div class="card-body p-1 bg-default text-center" style="
							    position: absolute;
							    bottom: 0;
							    width: 100%;
							">
					  	<h6><%= link_to service.name, service, :class=>"text-white text-decoration-none" %></h6>
					  </div>
					</div>
				</div>
			<% end if @services.present? %>
		</div>
		<% if controller_name == 'home' %>
			<div class="row pt-3 pb-3">
				<div class="col">
					<%= link_to 'More', '/services', :class=>"btn btn-dark" %>
				</div>
			</div>
		<% end %>
	</div>