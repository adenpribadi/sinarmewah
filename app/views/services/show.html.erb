					  <div class="card-body p-1 bg-default text-center" style="
							    position: absolute;
							    bottom: 0;
							    width: 100%;
							">
					  	<h6 class="text-white"><%= @service.item_2_title %></h6>
					  </div>
					</div>
				</div>
			<% end %>
			<% if @service.item_3_image? %>
