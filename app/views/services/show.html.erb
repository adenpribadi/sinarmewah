					</div>
				</div>
			<% end %>
    </div>


    <hr>
    <div class="row">
      <div class="col-md-2 p-1">
      	<% if current_user.present? %>
        	<%= link_to 'Back', services_path, class: "btn btn-secondary btn-block" %>
        <% else %>
        	<%= link_to 'Back', root_path, class: "btn btn-secondary btn-block" %>
        <% end %>
      </div>
      <div class="col-md-8"></div>
      <div class="col-md-2 p-1">
        <%= link_to 'Edit', edit_service_path(@service), class: "btn btn-primary btn-block" if current_user.present? %>
      </div>
    </div>
	</div>
</div>