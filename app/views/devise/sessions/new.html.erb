<p id="notice"></p>

  <div class="error-body no-top">
    <div class="container">
      <div class="row login-container column-seperation">
        <div class="col-md-5 col-md-offset-1">
          <h2>Welcome Page</h2>
          <p>
            Sign in to Continue Access.
          </p>
          <br>
        </div>
        <div class="col-md-5">
          <br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form validate") do |f| %>

            <div class="row">
              <div class="form-group col-md-12">
                <div class="input-group"> 
                  <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, :placeholder=> "Username" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group col-md-12">
                <div class="input-group"> 
                  <span class="input-group-addon"><i class="fa fa-lock fa-fw"></i></span>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true, :placeholder=> "Password" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-8">
                <% if devise_mapping.rememberable? %>
                  <div class="checkbox checkbox check-success">
                    Trouble login in?&nbsp;&nbsp;
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              </div>
              <div class="col-4">
                <%= f.submit "Log in", class: "btn btn-primary btn-cons pull-right btn-block" %>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-8">
                <%= flash[:recaptcha_error] %>
                <%= recaptcha_tags %>
              </div>
            </div>
            <div class="row pb-1">
              <div class="col-md-8">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
