<%= form_with(model: guest_book, local: true) do |form| %>
  <% if guest_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guest_book.errors.count, "error") %> prohibited this guest_book from being saved:</h2>

      <ul>
      <% guest_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row p-1">
    <div class="col-7">
      <%= form.text_field :name, id: :guest_book_name, :class=> "form-control", :placeholder=> "Name", :required=>true %>
    </div>
    <div class="col">
      <%= form.email_field :email, id: :guest_book_email, :class=> "form-control", :placeholder=> "Email", :required=>true %>
    </div>
  </div>
  <div class="form-row p-1">
    <div class="col">
      <%= form.text_field :subject, id: :guest_book_subject, :class=> "form-control", :placeholder=> "Subject", :required=>true %>
    </div>
  </div>
  <div class="form-row p-1">
    <div class="col">
      <%= form.cktext_area :comment, id: :guest_book_comment, :class=> "form-control", :placeholder=> "Comment", :required=>true %>
    </div>
  </div>

  <div class="form-row p-1">
    <div class="col">
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags %>
    </div>
  </div>
  <div class="form-row p-1">
    <div class="col">
      <%= form.submit 'Submit', :class => 'btn btn-primary btn-block', :name => 'submit' %>
    </div>
  </div>
<% end %>
